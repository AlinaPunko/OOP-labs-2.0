<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="5">
        <TextBox BorderBrush="Green" BorderThickness="1" Height="250" Name="text"
                 AllowDrop="True" AcceptsReturn="True"
                 PreviewDragEnter="text_PreviewDragEnter"
                 PreviewDragOver="text_PreviewDragEnter"
                 PreviewDrop="text_PreviewDrop"></TextBox>
        <Button HorizontalAlignment="Left" Margin="5">Some Button</Button>
    </StackPanel>
</Window>
