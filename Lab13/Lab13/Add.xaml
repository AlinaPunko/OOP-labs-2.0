<Window x:Class="Lab13.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab13"
        mc:Ignorable="d"
        Title="Add" Height="251" Width="319">
    <Grid>
        <TextBlock  Grid.Row="0" Margin="60,50,201,140">Name</TextBlock>
        <ComboBox Name="figureList" Height="21" VerticalAlignment="Top" Margin="165,50,51,0" >
            <TextBlock>Red ellipse</TextBlock>
            <TextBlock>Green ellipse</TextBlock>
            <TextBlock>Red rectangle</TextBlock>
            <TextBlock>Green rectangle</TextBlock>
        </ComboBox>

        <TextBlock Margin="65,95,181,100" >Count</TextBlock>
        <TextBox  Name="itemBox" MinWidth="50" Margin="165,95,51,91" />

        <WrapPanel HorizontalAlignment="Right" Width="251" Margin="0,165,-4,21">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" >OK</Button>
            <Button IsCancel="True" MinWidth="60"  Click="Button_Click" Content="Сancel" Width="24"/>
        </WrapPanel>
    </Grid>
</Window>
